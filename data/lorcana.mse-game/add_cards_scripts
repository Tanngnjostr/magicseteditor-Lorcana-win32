add cards script:
	name: &Commons
	description: Add a common card of each ink type to the set
	script:
		[
			new_card([ink: "amber"]),
			new_card([ink: "amethyst"]),
			new_card([ink: "emerald"]),
			new_card([ink: "ruby"]),
			new_card([ink: "sapphire"]),
			new_card([ink: "steel"])
		]

add cards script:
	name: &Uncommons
	description: Add an uncommon card of each ink type to the set
	script:
		[
			new_card([rarity: "uncommon", ink: "amber"]),
			new_card([rarity: "uncommon", ink: "amethyst"]),
			new_card([rarity: "uncommon", ink: "emerald"]),
			new_card([rarity: "uncommon", ink: "ruby"]),
			new_card([rarity: "uncommon", ink: "sapphire"]),
			new_card([rarity: "uncommon", ink: "steel"])
		]

